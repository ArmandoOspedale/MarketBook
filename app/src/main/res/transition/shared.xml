<?xml version="1.0" encoding="utf-8"?>

<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="350"
    android:interpolator="@android:interpolator/linear"
    android:transitionOrdering="together"
    >
    <changeBounds>
        <!--patternPathMotion android:patternPathData="M0 0 L0 100 L100 0"/-->
        <arcMotion
            android:maximumAngle="90"
            android:minimumHorizontalAngle="90"
            android:minimumVerticalAngle="0" />
        <targets>
            <target android:excludeId="@android:id/statusBarBackground"/>
            <target android:excludeId="@android:id/navigationBarBackground"/>
            <target android:excludeId="@+id/navigationBar"/>
            <target android:targetId="@+id/autoreLibro"/>
            <target android:targetId="@+id/titololibro"/>
            <target android:targetId="@+id/cardview"/>
            <target android:targetId="@+id/Copertina"/>
        </targets>
    </changeBounds>
</transitionSet>